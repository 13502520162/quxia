
.card {
  margin: 20rpx 0px;
  padding: 20rpx 40rpx;
  background: #fff;
}
.card-header .weui-loadmore {
  width: 100%;
  margin: 0rpx;
  margin-top: 30rpx;
}
.card-header .weui-loadmore__tips {
  font-size: 32rpx;
}
.fee {
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items:baseline;
}

.fee text:first-child{
  font-size: 100rpx;
  color: var(--main-color);
  font-weight: bold;
}
.card-container-item {
  font-size: 28rpx;
  margin: 20rpx 0rpx;
}

.goods-img {
  width: 200rpx;
  height: 200rpx;
  vertical-align: middle;
}

.goods {
  display: flex;
  border-bottom: 1rpx solid #e5e5e5;
}

.goods  .card-container-item {
  margin: 10rpx 0rpx;
}
.goods-details {
  margin-left: 20rpx;
}
