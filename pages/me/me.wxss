/* pages/me/me.wxss */

.header {
  display: flex;
  background: var(--main-color);
  color: #fff;
  padding: 10rpx 0rpx;
  height: 224rpx;
}
.header-left {
  margin: 0px 40rpx;
}
.avatar {
  display: block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.header-right {
  width: 100%;
}

.personInfo-item {
  /* display: inline-block; */
  width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}
.personInfo-item-title, .personInfo-item-info {
  display: block;
}
.personInfo-item-title {
  font-size: 20rpx;
}
.personInfo-item-info {
  font-weight: bold;
}

