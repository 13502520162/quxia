

.card {
  background: #fff;
  margin: 20rpx 0rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}
.card-item {
  width: 100%;
}

.item-body {
  height: 140rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between;
}

.item-left {
  margin-left: 20rpx;
}
.item-right {
  display: flex;
  align-items: center;
}

.item-bottom {
  color: var( --prompt-color )
}

.item-bottom text:nth-of-type(2) {
  margin-left: 20rpx;
}


.card-status-success,.card-status-fail {
  padding: 5rpx;
  color: #fff;
  border-radius: 10rpx;
  float: right;
  line-height: 32rpx;
}
.card-status-success {
  background: var(--main-color);
}
.card-status-fail {
  background: var(--error-color);
}