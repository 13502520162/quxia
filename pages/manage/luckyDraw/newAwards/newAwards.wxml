<!--pages/manage/luckyFree/newAwards/newAwards.wxml-->
<view class='newAwards'>

  <view class='newAwards-ele'>
    <text>名称</text>
    <input placeholder='请输入名称' />
  </view>

  <view class='newAwards-ele prize'>
    <text>奖品</text>
    <view class='prize-p'>

      <radio-group bindchange="radioChange">
        <label class=" weui-check__label" wx:for="{{checkboxItems}}" wx:key="value">
          <checkbox class="weui-check" value="{{item.value}}" checked="{{item.checked}}" />
          <view class="weui-cell__hd weui-check__hd_in-checkbox">
            <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.checked}}"></icon>
            <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.checked}}"></icon>
          </view>
        </label>
      </radio-group>

      <view class='prize-fl'>
        <text>优惠券</text>
        <picker bindchange="bindPickerconpons" value="{{index}}" range-key='name' range="{{conpons}}">
          <view class="picker">
            {{conpons[conponsIndex].name}}
          </view>
        </picker>
      </view>
      <view class='prize-fl'>
        <text>会员卡</text>
        <picker bindchange="bindPickervipCards" value="{{index}}" range-key='name' range="{{vipCards}}">
          <view class="picker">
            {{vipCards[vipCardsIndex].name}}
          </view>
        </picker>
      </view>
    </view>
  </view>



  <view class='newAwards-ele'>
    <text>奖品数量</text>
    <input type='number' placeholder='请输入奖品数量' />
  </view>


  <view class='newAwards-ele'>
    <text>中奖概率(%)</text>
    <input type='number' placeholder='请输入中奖概率' />
  </view>

</view>

<view class='preservation' bindtap='preservation'>确定</view>