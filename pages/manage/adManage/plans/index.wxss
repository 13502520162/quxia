/* pages/manage/place/list/list.wxss */
.header  {
  display: flex;
}
.header > view {
  display: inline-block;
}

.types {
  background: #fff;
  line-height: 48px;
  padding: 0rpx 10rpx;
  width: 200rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-bottom:1rpx solid #d7d6dc;
  border-top:1rpx solid #d7d6dc; 
}

.arrow {
  width: 0;
  height: 0;
  border-width: 5px;
  border-style: solid;
  border-color: #9b9b9b transparent transparent transparent;
  position: relative;
  top: 12px;
  margin-left: 10rpx;
}

.search {
  flex: 1;
}

.list {
  padding: 20rpx 0rpx;
  box-sizing: border-box;
}
.card {
  background: #fff;
  margin: 20rpx 0rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}
.card-item {
  width: 100%;
}

.item-body {
  height: 140rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between
}
.item-top  text:not(:first-child) { 
  margin-left: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
   background: var(--main-color);
  color: #fff;
  border-radius: 10rpx;
}
.item-bottom {
  color: var(--prompt-color)
}
.item-right {
  display: flex;
  align-items: center;
}

.card-status-success,.card-status-fail,.card-status-warn {
  padding: 10rpx;
  color: #fff;
  border-radius: 10rpx;
  float: right;
  line-height: 32rpx;
}
.card-status-success {
  background: var(--main-color);
}
.card-status-fail {
  background: var(--error-color);
}
.card-status-warn {
   background: var(--warn-color);
}
