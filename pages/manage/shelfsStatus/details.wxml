<!--pages/manage/shelfsStatus/details.wxml-->
<view>
  <view class="weui-cell weui-cell_select">
      <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label popup-title" style='margin:0'>货道方案</view>
      </view>
      <view class="weui-cell__bd">
          <picker bindchange="onPlansChange" range="{{plans}}" value='id' range-key="name" >
              <view class="weui-select">{{plans[plansIndex].name}}</view>
          </picker>
      </view>
  </view>

    <view class="weui-panel shelf-list">
        <view class="page__bd">
            <view class="weui-grids">
                <block wx:for="{{shelfs}}" wx:key="{{index}}">
                    <view  class="weui-grid" hover-class="weui-grid_active">
                        <view class='shelf-number' wx:if="{{item.number}}">{{item.number}}</view>
                        <view bindtap='showActionSheet' data-index='{{index}}'>
                            <image class="weui-grid__icon" src="{{ item.image}}"/>
                            <view class="weui-grid__label">{{item.name}}</view>
                            <view class="weui-grid__label">{{ '￥'+ item.price }}</view>
                        </view>
                    </view>
                </block>
            </view>
        </view>
    </view>

    <view class='bottom-btn' bindtap='confirmPlans'>
      <button  class="weui-btn" type="primary">确认</button>
    </view>
</view>