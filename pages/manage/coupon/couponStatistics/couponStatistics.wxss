/* pages/manage/coupon/couponStatistics/couponStatistics.wxss */

.page {
  padding: 30rpx;
  background: #fff;
  margin:20rpx 0;
}

.page__title {
  font-weight: bold;
}

.page__desc {
  font-size: 25rpx;
  margin-top: 10rpx;
  color: rgba(153, 148, 148, 1);
}

.page__bd_spacing {
  margin-top: 30rpx;
}

.weui-flex {
  margin-top: 30rpx;
}

.placeholder .num {
  color: rgb(0, 118, 255);
  font-weight: normal;
  margin-left: 5rpx;
}

.placeholder {
  text-align: left;
  height: 1.5em;
  line-height: 1.5em;
}
.scrollCoupon{
  /* margin: 20rpx 0; */
  background: #fff;
}


.coupon-bg {
  height: 150rpx;
  padding: 10rpx 15rpx;
  border-bottom: 1rpx solid rgba(246, 246, 246, 1);
  border-radius: 8rpx 8rpx 0rpx 0rpx;
}

.coupon-left {
  padding-top: 30rpx;
}

.coupon-title-name {
  color: rgba(51, 51, 51, 1);
  font-weight: bold;
  font-size: 32rpx;
}

.preferential-form {
  font-size: 20rpx;
  margin-left: 10rpx;
  background: #188ae2;
  color: #fff;
  padding: 2rpx 10rpx;
  border-radius: 15rpx;
}

.coupon-date {
  font-size: 25rpx;
  margin-top: 10rpx;
  color: rgba(153, 148, 148, 1);
}

.coupon-left {
  width: 80%;
  display: inline-block;
  box-sizing: border-box;
  padding-left: 15rpx;
}

.coupon-right {
  width: 20%;
  line-height: 150rpx;
  text-align: center;
  display: inline-block;
}

.coupon-right image {
  width: 35rpx;
  height: 35rpx;
}
