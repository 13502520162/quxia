<!--pages/manage/messageReminder/messageReminder.wxml-->
<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item.name}}
              <text class='num' wx:if="{{item.num!=0}}">{{item.num}}</text> </view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
      </view>
      <view class="weui-tab__panel">
        <view class="weui-tab__content">
          <scroll-view scroll-y="true">

            <view class='news'>
              <view>
                <view>
                  <text>设备编号：</text>
                  <text>10000000000000</text>
                </view>
                <view>
                  <text>设备名称：</text>
                  <text>正佳广场南门门口</text> </view>
                <view>
                  <text>场地：</text>
                  <text>正佳广场</text>
                </view>
                <view>
                  <text>地址：</text>
                  <text>广州市天河区天河北路100号</text>
                </view>
                <view class='date'>
                  <text>2019-03-07 11:06:18</text>
                </view>
              </view>
              <view class='state'>
                <text bindtap='markedRead'>标记已读</text>
              </view>
            </view>

          </scroll-view>
        </view>
      </view>
    </view>
  </view>
</view>