/* pages/manage/device/list/details.wxss */

.details-header {
  background: #fff;
  height: 100rpx;
  padding: 20rpx;
}

.card-status-success, .card-status-fail {
  padding: 5rpx 10rpx;
  color: #fff;
  border-radius: 10rpx;
  float: right;
}

.card-status-success {
  background: var(--main-color);
}

.card-status-fail {
  background: var(--error-color);
}

.location-name {
  margin-top: 10rpx;
}

.details-body {
  margin-top: 20rpx;
  background: #fff;
}

.bottom {
  position: absolute;
  bottom: 0;
  color: #fff;
  display: flex;
  width: 100%;
  background: var(--main-color);
}

.disbind {
  background: var(--error-color);
}

.bottom text {
  padding: 20rpx 0rpx;
  font-size: 32rpx;
  display: inline-block;
  text-align: center;
  flex: 1;
}

.imgSrc {
  z-index: 999;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
}

.imgSrc>view {
  height: 40%;
  background: #fff;
  position: relative;
  top: 60%;
  text-align: center;
}

.imgSrc view image {
  width: 320rpx;
  height: 320rpx;
}

.closeX {
  background: #d9d9d9;
  text-align: right;
  height: 60rpx;
  line-height: 60rpx;
  padding-right: 20rpx;
  margin-bottom: 15rpx;
}

.code {
  text-align: center;
  margin-top: 10rpx;
}

.preservationCode {
  padding: 5rpx 10rpx;
  background: var(--main-color);
  border-radius: 10rpx;
  color: #fff;
  display: inline-block;
  width: 240rpx;
}

view .reset-weui-cell::after {
  border: none;
}

view  .reset-weui-cell::before {
  border: none;
}

canvas {
  position: fixed;
  top: -10000px;
}
