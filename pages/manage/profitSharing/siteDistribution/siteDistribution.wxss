/* pages/manage/place/list/list.wxss */

.header {
  display: flex;
}

.header > view {
  display: inline-block;
}

.trade {
  background: #fff;
  line-height: 48px;
  padding: 0rpx 10rpx;
  width: 200rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-bottom: 1rpx solid #d7d6dc;
  border-top: 1rpx solid #d7d6dc;
}

.arrow {
  width: 0;
  height: 0;
  border-width: 5px;
  border-style: solid;
  border-color: #9b9b9b transparent transparent transparent;
  position: relative;
  top: 12px;
  margin-left: 10rpx;
}

.search {
  flex: 1;
}

.list {
  padding: 0 0 20rpx 0rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  margin: 20rpx 0rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}

.card-item {
  width: 100%;
}

.item-body {
  height: 140rpx;
  margin-left: 20rpx;
}

.weui-select {
  min-height: 0;
  line-height: inherit;
}

.item-top {
  display: inline-block;
}

.item-top image {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  margin-right: 12rpx;
}

.enabled {
  margin-left: 20rpx;
  padding: 5rpx 10rpx;
  border-radius: 20rpx;
  color: #fff;
  font-size: 24rpx;
  background: #ff9500;
}

.unenabled {
  margin-left: 20rpx;
  padding: 5rpx 10rpx;
  border-radius: 20rpx;
  color: #fff;
  font-size: 24rpx;
  background: #d1d1d6;
}
