

.header  {
  display: flex;
}
.header > view {
  display: inline-block;
}

.trade {
  background: #fff;
  line-height: 48px;
  padding: 0rpx 10rpx;
  width: 200rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-bottom:1rpx solid #d7d6dc;
  border-top:1rpx solid #d7d6dc; 
}

.arrow {
  width: 0;
  height: 0;
  border-width: 5px;
  border-style: solid;
  border-color: #9b9b9b transparent transparent transparent;
  position: relative;
  top: 12px;
  margin-left: 10rpx;
}

.search {
  flex: 1;
}

.card {
  background: #fff;
}

.device-list {
  margin-top: 10px;
  height: calc( 100vh - 220rpx );
}
