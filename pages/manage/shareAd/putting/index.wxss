/* pages/manage/place/list/list.wxss */
.header  {
  display: flex;
}
.header > view {
  display: inline-block;
}

.trade {
  background: #fff;
  line-height: 48px;
  padding: 0rpx 10rpx;
  width: 200rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  border-bottom:1rpx solid #d7d6dc;
  border-top:1rpx solid #d7d6dc; 
}

.arrow {
  width: 0;
  height: 0;
  border-width: 5px;
  border-style: solid;
  border-color: #9b9b9b transparent transparent transparent;
  position: relative;
  top: 12px;
  margin-left: 10rpx;
}

.search {
  flex: 1;
}

.list {
  height: calc( 100vh - 200rpx );
}
.card {
  background: #fff;
  margin: 20rpx 0rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}
.card-item {
  width: 100%;
}

.item-body {
  height: 140rpx;
  margin-left: 20rpx;
  display: flex;
  justify-content: space-between;
}

.item-left {
  margin-left: 20rpx;
}
.item-right {
  display: flex;
  align-items: center;
}

.item-bottom text:nth-of-type(2) {
  margin-left: 20rpx;
}


.card-status-success,.card-status-fail {
  padding: 5rpx;
  color: #fff;
  border-radius: 10rpx;
  float: right;
  line-height: 32rpx;
}
.card-status-success {
  background: var(--main-color);
}
.card-status-fail {
  background: var(--error-color);
}