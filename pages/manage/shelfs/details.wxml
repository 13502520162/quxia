<view>
    <view class="weui-panel">
      <view class="weui-panel__bd">
          <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                  <view class="weui-label">名称</view>
              </view>
              <view class="weui-cell__bd">
                  <input class="weui-input" placeholder="请输入方案名称" name="name" value='{{shelfs.name}}' bindinput='onChangeShelfsName'/>
              </view>
          </view>
          <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                  <view class="weui-label">货道数量</view>
              </view>
              <view class="weui-cell__bd">
                <view class='num-ctrol-group'>
                    <view class='num-ctrol-group-reduce-btn' bindtap='reduceBtn'>-</view>
                    <view class='num-ctrol-group-num'>{{shelfs.shelfCount}}</view>
                    <view class='num-ctrol-group-add-btn' bindtap='addBtn'>+</view>
                </view>
              </view>
          </view>
        </view>
    </view>

    <view class="weui-panel shelf-list">
         <view class="page__bd">
              <view class="weui-grids">
                  <block wx:for="{{shelfs.shelfs}}" wx:key="{{index}}">
                      <view  class="weui-grid" hover-class="weui-grid_active">
                          <view class='shelf-number' wx:if="{{item.number}}">{{item.number}}</view>
                          <view bindtap='showActionSheet' data-index='{{index}}'>
                              <image class="weui-grid__icon" src="{{ item.image ? item.image : '../../../assets/images/plus.png' }}"/>
                              <view class="weui-grid__label">{{item.name ? item.name :'请选择商品'}}</view>
                              <view class="weui-grid__label">{{ item.price ? '￥'+ item.price : '￥0' }}</view>
                          </view>
                      </view>
                  </block>
              </view>
          </view>
    </view>

    <view class='bottom-btn' bindtap='submit'>
      <button  class="weui-btn" type="primary">提交</button>
    </view>

</view>