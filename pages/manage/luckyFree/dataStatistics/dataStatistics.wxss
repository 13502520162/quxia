/* pages/manage/luckyFree/dataStatistics/dataStatistics.wxss */

.page {
  background: #fff;
}

.page__hd {
  padding: 20rpx;
}

.page__bd {
  padding: 20rpx;
}

.weui-cell::before {
  border: none;
}

.weui-grids {
  border: none;
  overflow: hidden;
}

.weui-grid {
  border: none;
}

.weui-grid__label {
  text-align: left;
}

.status {
  margin-left: 15rpx;
  padding: 5rpx 10rpx;
  background-color: rgb(0, 118, 255);
  color: #fff;
  border-radius: 10rpx;
}

.num {
  color: rgb(0, 118, 255);
}

.viewOrder {
  border: 1px solid #d9d9d9;
}

.page__desc .state {
  margin-left: 20rpx;
  padding: 5rpx 10rpx;
  border-radius: 20rpx;
  color: #fff;
  font-size: 24rpx;
  background: #d1d1d6;
}

.page__desc  .state2 {
  background: #ff9500;
}

.page__desc  .state3 {
  background: #1aad19;
}

.page__desc  .state4 {
  background: #a5a2a2;
}
