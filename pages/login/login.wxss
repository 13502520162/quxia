/* pages/login/login.wxss */
.page__bd {
height: 100vh;
background:linear-gradient(180deg,rgba(48,214,139,1) 0%,rgba(26,173,25,1) 100%);
opacity:1;
}
.input-group {

  margin: 0rpx 80rpx;
}
.weui-label {
  width: 48rpx;
}
.weui-cell:before {
  border-top: none;
}
.weui-input {
  margin-left: 40rpx;
  color: #FFF;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.3);
}
.input-group image {
    width: 48rpx;
    height: 48rpx;
}

.weui-cell_input:nth-of-type(2) {
  margin-top: 30rpx;
}

.header-cicle1{
  margin-top: 136rpx;
  margin-bottom: 122rpx;
  width: 192rpx;
  height: 192rpx;
  background:rgba(255,255,255,0.2);
  border-radius: 50%;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.header-cicle2 {
  width: 160rpx;
  height: 160rpx;
  background:rgba(255,255,255,0.1);
   border-radius: 50%;
  position: absolute;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9;
}

.avatar {
  display: block;
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  position: absolute;
  z-index: 99;
}
.weui-btn-area {

  width: 550rpx;
  margin: 88rpx auto;
  box-sizing: border-box;
  
}
.button-hover[type=primary] {
  background: transparent;
}
button  {
  height: 96rpx;
  border-radius: 96rpx;
  border: 1rpx solid #fff;
  background: transparent;
  /* border-radius: ; */
}

input {
  caret-color: #fff !important;
}


input:focus {
  color: #fff !important;
  caret-color: #fff !important;
}